<style>
  .auth-link {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
    padding: 8px 0;
    display: inline-block;
    font-size: 14px;
    transition: color 0.2s ease-in-out;
  }

  .auth-link:hover {
    color: #0056b3;
    text-decoration: underline;
  }

  .omniauth-btn {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    font-size: 14px;
    cursor: pointer;
    display: inline-block;
    margin-top: 10px;
    text-align: center;
  }

  .omniauth-btn:hover {
    background-color: #218838;
  }

  .auth-container {
    text-align: center;
    padding: 20px;
  }
</style>
<body>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: 'auth-link' %><br />
  <% end %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'auth-link' %><br />
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'auth-link' %><br />
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'auth-link' %><br />
  <% end %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'auth-link' %><br />
  <% end %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'omniauth-btn' %><br />
    <% end %>
  <% end %>
</body>
